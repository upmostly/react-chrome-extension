{
  "manifest_version": 2,
  "name": "Slate V3",
  "description": "Manage your history, bookmarks and downloads",
  "version": "1.0.0",
  "homepage_url": "https://slate.host",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "favicon.png",
    "default_title": "React Chrome Extension Boilerplate"
  },
  "background": {
    "scripts": ["./jquery.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": [
      "./content.js",
      "./search.js",
      "./jquery.js"
    ],
    "run_at": "document_idle"
  }],
  "permissions": [
    "activeTab", 
    "tabs",
    "bookmarks",
    "history",
    "chrome://favicon/",
    "storage",
    "downloads",
    "contextMenus"
  ],
  "commands": {
    "open-app": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Open the slate app"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src chrome://favicon; ",
  "web_accessible_resources": [
    "index.html",
    "/static/*"
  ]
}
